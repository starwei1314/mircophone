<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/month_time"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="40dp">
                <TextView
                    android:id="@+id/pay_month"
                    android:text="本月账单"
                    android:padding="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/look_bill"
                    android:text="查看月账单 "
                    android:drawableRight="@drawable/zj"
                    android:padding="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">


        <com.recker.flyshapeimageview.ShapeImageView
            android:id="@+id/shapeImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/my"

            app:frame_color="@android:color/holo_red_light"
            app:shape_mode="circle" />

        <com.recker.flyshapeimageview.ShapeImageView
            android:id="@+id/shapeImageView2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/hy"
            app:frame_color="@android:color/holo_red_light"
            app:shape_mode="circle" />

        <TextView
            android:id="@+id/alipay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/alipay_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin10"
            android:text="今天11:46"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/alipay_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/alipay_name"
            android:layout_alignBottom="@+id/alipay_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="+3980.00"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/alipay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/alipay_time"
            android:text="等待确认收货"
            android:textColor="#FF9A3A" />

        <TextView
            android:id="@+id/alipay_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/shapeImageView2"
            android:layout_toRightOf="@+id/shapeImageView2"
            android:text="购买微手机"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView

            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/shapeImageView"
            android:layout_marginLeft="10dp"
            android:background="#EBEBEB" />
        </RelativeLayout>

</LinearLayout>