<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/alipay_transfer_title_tx"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#3BA0FF"
            />

        <LinearLayout

            android:id="@+id/alipay_transfer_title_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/alipay_transfer_title_tx"
            android:background="#3BA0FF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/alipay_transfer_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/sk"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#fffefe"
                />

            <TextView
                android:id="@+id/alipay_transfer_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付宝转账"
                android:textColor="#fffefe"
                android:textSize="18dp"
                />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/transfer_choice_rl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginBottom="@dimen/dimen5"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/height10"
                android:padding="5dp"
                android:text="对方角色"
                />

            <TextView
                android:id="@+id/transfer_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_zi"
                android:layout_marginRight="@dimen/margin10"
                android:text="选择角色"
                />
            <ImageView
                android:id="@+id/iv_zi"
                android:layout_width="@dimen/width20"
                android:layout_height="@dimen/height20"
                android:src="@mipmap/zi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/transfer_select"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/transfer_number"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="11dp"
                    android:text="13888888888"
                    android:layout_toLeftOf="@+id/imageView2"
                    />


                <TextView
                    android:id="@+id/transfer_name"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/imageView2"
                    android:layout_above="@+id/transfer_number"
                    android:text="马云"
                    />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/height10"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:src="@drawable/my"
                    />
                <ImageView
                    android:id="@+id/transfer_lv"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/width20"
                    android:layout_height="@dimen/height20"
                    android:src="@mipmap/dz"
                    />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="收支类型"
                />


            <CheckBox
                android:id="@+id/alipay_transfer_expend"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/select"
                android:button="@null"
                android:gravity="center"
                android:text="转出"
                android:textSize="12dp"
                />

            <CheckBox
                android:id="@+id/alipay_transfer_income"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/alipay_transfer_expend"
                android:layout_toStartOf="@+id/alipay_transfer_expend"
                android:background="@drawable/select"
                android:button="@null"
                android:gravity="center"
                android:text="转入"
                android:textSize="12dp"
                />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            >

            <EditText
                android:id="@+id/alipay_transfer_money"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="金额(元)"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textColorHint="#cccccc"
                android:textSize="15dp"
                />


        </RelativeLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            >

            <EditText
                android:id="@+id/alipay_transfer_declare"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:maxLength="50"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="转账说明"
                android:textColorHint="#cccccc"
                android:textSize="12dp"
                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/alipay_set_time"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/dimen5"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="创建时间"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/alipay_transfer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="2017-09-06 17:06"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/alipay_pay_type_rl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/margin1"
            >
            <TextView
                android:text="付款方式"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin10"
                />
            <TextView
                android:id="@+id/pay_bank_card"
                android:text="余额"
                android:layout_toLeftOf="@+id/iv"
                android:layout_marginRight="@dimen/margin10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/margin1"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="交易状态"
                />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/alipay_transfer_status"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/zi"
                />

            <TextView
                android:id="@+id/alipay_transfer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3"
                android:text="交易成功"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alipay_transfer_order_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/transfer_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/height10"
                android:text="20170925000011574298123458413"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/sx"
                />
        </RelativeLayout>


        <Switch
            android:id="@+id/alipay_transfer_shop_number"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            android:background="@color/white"
            android:text="显示商户订单号"
            />


        <Switch
            android:id="@+id/alipay_transfer_record"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            android:background="@color/white"
            android:text="显示查看来往记录"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height10"
            android:layout_marginTop="10dp"
            android:text="*收款交易记录上没有显示订单号"
            />

        <TextView
            android:id="@+id/alipay_transfer_preview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/margin10"
            android:background="@drawable/shape_preview"
            android:gravity="center"
            android:text="生成预览"
            android:textColor="@color/white"
            android:textSize="16dp"
            />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>