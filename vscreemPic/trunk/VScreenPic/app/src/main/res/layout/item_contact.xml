<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_contact_swipe_root"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/height60"
    >


    <ImageView
        android:id="@+id/item_contact_img"
        android:layout_width="@dimen/width50"
        android:layout_height="@dimen/height50"
        android:layout_marginTop="@dimen/dimen5"
        android:layout_marginBottom="@dimen/dimen5"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        />

    <TextView
        android:layout_toRightOf="@+id/item_contact_img"
        android:id="@+id/item_contact_nick"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="@dimen/dimen5"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="昵称"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/item_contact_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标记"
        android:layout_toRightOf="@+id/item_contact_img"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dimen5"
        android:layout_marginBottom="@dimen/dimen5"
        />
    <TextView
        android:id="@+id/item_contact_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dimen5"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin20"
        />
</RelativeLayout>


