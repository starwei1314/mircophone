<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/light_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin10"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height30"
            android:gravity="center_vertical"
            style="@style/gray_14"
            android:paddingLeft="@dimen/margin10"
            android:text="收支类型"
            />
        <TextView
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/get_money_tx"
            android:layout_marginRight="@dimen/margin10"
            android:layout_toLeftOf="@+id/kiting"
            android:layout_width="@dimen/width60"
            android:layout_height="@dimen/height30"
            android:background="@drawable/shape_blue"
            android:text="收钱"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            />
        <TextView
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/kiting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin10"
            android:layout_width="@dimen/width60"
            android:layout_height="@dimen/height30"
            android:background="@drawable/shape8"
            android:text="转出"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="16dp"
            />
        <TextView
            android:layout_marginTop="@dimen/margin10"
            android:layout_below="@+id/kiting"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5"
            android:background="@color/grayLine"
            />
        <EditText
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/kiting"
            android:id="@+id/weChat_money"
            android:hint="金额（元）"
            android:maxLength="10"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin10"
            android:textColorHint="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width50"
            android:background="@color/white"
            />
        <TextView
            android:layout_below="@+id/weChat_money"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5"
            android:background="@color/grayLine"
            />
        <RelativeLayout
            android:visibility="gone"
            android:layout_below="@+id/weChat_money"
            android:layout_marginTop="2dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal"
            android:id="@+id/get_money_target"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"

            >
            <TextView
                android:text="收钱的人"
                android:gravity="center"
                style="@style/gray_14"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/get_money_name"
                android:layout_toLeftOf="@+id/get_money_img"
                android:text="选择角色"
                android:layout_centerVertical="true"
                android:gravity="center"
                style="@style/gray_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10"
                />
            <ImageView
                android:visibility="gone"
                android:layout_toLeftOf="@+id/get_money_arrow"
                android:id="@+id/get_money_img"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_width="@dimen/width50"
                android:layout_height="@dimen/height50"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/get_money_arrow"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zi"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/transfer_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/gray_14"
                android:text="转账类型"
                />
            <TextView
                android:id="@+id/transfer_status"
                android:text="未收钱"
                style="@style/gray_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_marginLeft="@dimen/margin10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zi"
                />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5"
            android:background="@color/grayLine"
            />
        <LinearLayout
            android:id="@+id/transfer_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/gray_14"
                android:text="转账时间"
                />
            <TextView
                android:id="@+id/transfer_time_tx"
                android:text="2017-9-18 18:25"
                style="@style/gray_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_marginLeft="@dimen/margin10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zi"
                />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5"
            android:background="@color/grayLine"
            />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/get_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/gray_14"
                android:text="收钱时间"
                />
            <TextView
                android:id="@+id/get_time_tx"
                android:text="0"
                style="@style/gray_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_marginLeft="@dimen/margin10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zi"
                />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/getPreView"
            android:layout_alignParentBottom="true"
            android:text="生成预览"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_preview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height50"
            android:layout_margin="@dimen/margin10"
            />
    </RelativeLayout>
</LinearLayout>